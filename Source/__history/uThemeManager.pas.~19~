unit uThemeManager;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, Vcl.ExtCtrls, Vcl.Themes;

type
  TfrmTheme = class(TForm)
    PageControl1: TPageControl;
    TabSheet1: TTabSheet;
    TabSheet2: TTabSheet;
    Button1: TButton;
    Image1: TImage;
    Image2: TImage;
    Button2: TButton;
    TabSheet3: TTabSheet;
    procedure FormActivate(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmTheme: TfrmTheme;

implementation

{$R *.dfm}

procedure TfrmTheme.Button1Click(Sender: TObject);
begin
  TStyleManager.SetStyle('Ruby Graphite');
end;

procedure TfrmTheme.Button2Click(Sender: TObject);
begin
  TStyleManager.SetStyle('Aqua Graphite');
end;

procedure TfrmTheme.FormActivate(Sender: TObject);
begin
  PageControl1.ActivePage := TabSheet1;
end;

end.
